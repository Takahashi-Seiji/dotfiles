# Get External IP / Internet Speed
alias myip="curl https://ipinfo.io/json" # or /ip for plain-text ip
alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000' # Or python -m SimpleHTTPServer :)

# NOTE: On Q3 2021, Le Wagon decided to change the Web Dev curriculum default text editor
alias stt="echo 'Launching VS Code instead of Sublime Text... (cf ~/.aliases)' && code ."

alias vs='code .'
alias gst='git status'
alias c='clear'
alias cdt='cd ~/code/Takahashi-Seiji'
alias ga='git add .'
alias gc='git commit -m <message>'
alias rc='rails c'
alias rs='rails s'
alias bd='bin/dev'
alias bi='bundle install'
alias rdm='rails db:migrate'
alias rdd='rails db:drop db:create db:migrate'
alias rds='rails db:seed'
alias gpl='git pull origin master'
alias cdlc='cd ~/code/Takahashi-Seiji/exercises/leetcode'
alias cdmh='cd ~/code/Takahashi-Seiji/markethub/markethub'
alias rr='rails routes'
alias rrg='rails routes -g'
alias rgm='rails g migration'
